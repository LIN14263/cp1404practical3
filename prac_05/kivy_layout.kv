#:kivy 2.3.0

# CP1404 Practical 5 - Kivy layout file
# This layout expects the root widget class to define:
# - handle_greet()
# - handle_clear()
# and to have ids 'name_input' and 'output_label'.

<BoxLayout>:
    orientation: 'vertical'
    padding: 16
    spacing: 12

    Label:
        id: output_label
        text: 'Enter your name'
        size_hint_y: None
        height: 40
        halign: 'left'
        valign: 'middle'
        text_size: self.size

    TextInput:
        id: name_input
        hint_text: 'Your name'
        multiline: False
        size_hint_y: None
        height: 44

    BoxLayout:
        size_hint_y: None
        height: 44
        spacing: 12

        Button:
            text: 'Greet'
            on_press: root.handle_greet()

        Button:
            text: 'Clear'
            on_press: root.handle_clear()

